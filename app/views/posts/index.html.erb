<div class="container" id="home">
  <div class="home-banner">
    <div class="desc">
    <h1>What Makes You Happy?</h1>
    <h5>Welcome back <%= current_user.email %> | <%= link_to "Sign Out", destroy_user_session_path %></h5>

    <% if policy(Post).create? %>
    <%= render 'form', post: @post %>
    <% end  %>

  <div class="pindex">

    <h1>Your Happy Posts</h1>
    <% unless current_user.posts.nil? %>
    <% current_user.posts.each do |p| %>
    <p><%=p.post%><br><%= p.created_at.strftime("%b %d %Y") %></p>
    <% end %>
    <% else %>
    <h1>No Posts Yet!</h1>
    <% end %>
  </div>
    </div>
  </div>

</div>
